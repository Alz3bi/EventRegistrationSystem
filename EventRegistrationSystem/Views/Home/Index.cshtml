@model IEnumerable<EventRegistrationSystem.Models.Event>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">Upcoming Events</h1>
            @if (Model.Any())
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Capacity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var eventItem in Model)
                        {
                            <tr>
                                <td>@eventItem.Title</td>
                                <td>@eventItem.Date.ToString("MM/dd/yyyy")</td>
                                <td>@eventItem.Description</td>
                                <td>@eventItem.Capacity</td>
                                <td>
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-primary btn-sm">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No upcoming events at the moment. Please check back later.
                </div>
            }
        </div>
    </div>
</div>

