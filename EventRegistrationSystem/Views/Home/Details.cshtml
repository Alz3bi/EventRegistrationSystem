@model EventRegistrationSystem.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>@Model.Title</h2>
                </div>
                <div class="card-body">
                    <p><strong>Date:</strong> @Model.Date.ToString("MM/dd/yyyy")</p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Capacity:</strong> @Model.Capacity</p>
                </div>
                <div class="card-footer text-end">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Events</a>
                    <a asp-controller="Registrations" asp-action="Register" asp-route-eventId="@Model.Id" class="btn btn-primary">Register</a>
                </div>
            </div>
        </div>
    </div>
</div>


